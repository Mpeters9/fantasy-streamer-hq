{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.fantasy.streamer.hq",
  "productName": "Fantasy Streamer HQ",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../.next"
  },
  "app": {
    "windows": [
      {
        "title": "Fantasy Streamer HQ",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
